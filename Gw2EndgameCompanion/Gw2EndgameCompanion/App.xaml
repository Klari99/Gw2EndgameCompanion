<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gw2EndgameCompanion.App">
    <Application.Resources>
        
        <Style TargetType="Frame" ApplyToDerivedTypes="True">
            <Setter Property="BackgroundColor" Value="#2a2a2e" />
        </Style>

        <Style TargetType="Entry" ApplyToDerivedTypes="True">
            <Setter Property="PlaceholderColor" Value="#878187" />
            <Setter Property="TextColor" Value="#f0e6e8" />
        </Style>

        <Style TargetType="Shell" ApplyToDerivedTypes="True">
            <Setter Property="BackgroundColor" Value="#2a2a2e" />
        </Style>
        
    </Application.Resources>
</Application>